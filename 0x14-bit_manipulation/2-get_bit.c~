#include "main.h"

/**
 * get_bit - returns the value of a bit at a given index
 * @n: number to search
 * @index: index of a bit starting from 0 of the bit you want to get
 */

int get_bit(unsigned long int n, unsigned int index)
{
int bin;
if (index > 65)
return (-1);
bin = (n >> index) & 1;
return (bin);
}
